<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ControlsFragment"
    android:orientation="vertical"
    android:background="@color/controls_fragment_background"
    android:gravity="center"
    android:padding="@dimen/controls_fragment_padding">

    <Button
        android:id="@+id/btn_led"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controls_fragmenment_button_size"
        android:layout_margin="@dimen/controls_fragmenment_component_margin"
        android:background="@drawable/selector_switch_off"
        android:text="LED"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controls_fragmenment_button_size"
        android:layout_margin="@dimen/controls_fragmenment_component_margin"
        android:background="@drawable/selector_switch_off"
        android:text="GO"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controls_fragmenment_button_size"
        android:layout_margin="@dimen/controls_fragmenment_component_margin"
        android:background="@drawable/selector_switch_off"
        android:text="STOP"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_respond"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controls_fragmenment_button_size"
        android:layout_margin="@dimen/controls_fragmenment_component_margin"
        android:background="@drawable/selector_switch_off"
        android:text="RESPOND"
        android:textColor="@android:color/white"/>


</LinearLayout>